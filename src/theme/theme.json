{
  "name": "Kognexus Platform Theme",
  "palette": {
    "mode": "dark",
    "primary": {
      "main": "#0080FF",
      "light": "#40A5FF",
      "dark": "#005BB5",
      "contrastText": "#FFFFFF"
    },
    "secondary": {
      "main": "#00FF00",
      "light": "#66FF66",
      "dark": "#00CC00",
      "contrastText": "#000000"
    },
    "warning": {
      "main": "#FFD700",
      "light": "#FFEB66",
      "dark": "#CCA500",
      "contrastText": "#000000"
    },
    "error": {
      "main": "#FF4444",
      "light": "#FF7777",
      "dark": "#CC1111",
      "contrastText": "#FFFFFF"
    },
    "info": {
      "main": "#00BFFF",
      "light": "#66D9FF",
      "dark": "#0099CC",
      "contrastText": "#FFFFFF"
    },
    "success": {
      "main": "#32CD32",
      "light": "#65FF65",
      "dark": "#228B22",
      "contrastText": "#000000"
    },
    "background": {
      "default": "#0A0A0A",
      "paper": "#1A1A1A"
    },
    "surface": {
      "main": "#252525",
      "light": "#333333",
      "dark": "#1A1A1A"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#B0B0B0",
      "disabled": "#666666"
    },
    "divider": "#333333",
    "action": {
      "active": "#FFFFFF",
      "hover": "rgba(255, 255, 255, 0.08)",
      "selected": "rgba(0, 128, 255, 0.12)",
      "disabled": "rgba(255, 255, 255, 0.26)",
      "disabledBackground": "rgba(255, 255, 255, 0.12)"
    }
  },
  "typography": {
    "fontFamily": "\"Inter\", \"Roboto\", \"Helvetica\", \"Arial\", sans-serif",
    "h1": {
      "fontSize": "3.5rem",
      "fontWeight": 700,
      "lineHeight": 1.2,
      "letterSpacing": "-0.02em"
    },
    "h2": {
      "fontSize": "2.75rem",
      "fontWeight": 600,
      "lineHeight": 1.3,
      "letterSpacing": "-0.01em"
    },
    "h3": {
      "fontSize": "2.25rem",
      "fontWeight": 600,
      "lineHeight": 1.4
    },
    "h4": {
      "fontSize": "1.75rem",
      "fontWeight": 500,
      "lineHeight": 1.4
    },
    "h5": {
      "fontSize": "1.5rem",
      "fontWeight": 500,
      "lineHeight": 1.5
    },
    "h6": {
      "fontSize": "1.25rem",
      "fontWeight": 500,
      "lineHeight": 1.5
    },
    "body1": {
      "fontSize": "1.5rem",
      "lineHeight": 1.6
    },
    "body2": {
      "fontSize": "0.875rem",
      "lineHeight": 1.5
    },
    "caption": {
      "fontSize": "0.75rem",
      "lineHeight": 1.4,
      "color": "#B0B0B0"
    }
  },
  "shape": {
    "borderRadius": 8
  },
  "shadows": [
    "none",
    "0px 1px 3px rgba(0, 128, 255, 0.12), 0px 1px 2px rgba(0, 0, 0, 0.24)",
    "0px 3px 6px rgba(0, 128, 255, 0.16), 0px 3px 6px rgba(0, 0, 0, 0.23)",
    "0px 10px 20px rgba(0, 128, 255, 0.19), 0px 6px 6px rgba(0, 0, 0, 0.23)",
    "0px 14px 28px rgba(0, 128, 255, 0.25), 0px 10px 10px rgba(0, 0, 0, 0.22)",
    "0px 19px 38px rgba(0, 128, 255, 0.30), 0px 15px 12px rgba(0, 0, 0, 0.22)"
  ],
  "components": {
    "MuiButton": {
      "styleOverrides": {
        "root": {
          "textTransform": "none",
          "borderRadius": "8px",
          "padding": "10px 24px",
          "fontWeight": 600,
          "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)"
        },
        "contained": {
          "boxShadow": "0px 4px 12px rgba(0, 128, 255, 0.4)",
          "background": "linear-gradient(135deg, #0080FF 0%, #0066CC 100%)"
        }
      }
    },
    "MuiCard": {
      "styleOverrides": {
        "root": {
          "background": "linear-gradient(135deg, #1A1A1A 0%, #252525 100%)",
          "border": "1px solid rgba(0, 128, 255, 0.2)",
          "backdropFilter": "blur(10px)"
        }
      }
    },
    "MuiAppBar": {
      "styleOverrides": {
        "root": {
          "background": "rgba(10, 10, 10, 0.95)",
          "backdropFilter": "blur(10px)",
          "borderBottom": "1px solid rgba(0, 128, 255, 0.2)"
        }
      }
    }
  },
  "customColors": {
    "neonBlue": "#00BFFF",
    "neonGreen": "#32CD32",
    "warningYellow": "#FFD700",
    "alertRed": "#FF4444",
    "grid": "rgba(0, 128, 255, 0.1)",
    "glow": "rgba(0, 128, 255, 0.3)"
  }
}
